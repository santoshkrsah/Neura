<%- include('partials/header') %>
<div class="container mt-5">
  <h1 class="text-center mb-4">ðŸ“š Available Courses</h1>
  <% if (courses.length === 0) { %>
    <p class="text-center">No courses yet. <a href="/admin/add-course">Add one!</a></p>
  <% } else { %>
    <div class="row">
      <% courses.forEach(course => { %>
        <div class="col-md-4 mb-4">
          <div class="card h-100 shadow-sm">
            <div class="card-body">
              <h5 class="card-title"><%= course.title %></h5>
              <p class="card-text"><%= course.description %></p>
              <a href="<%= course.liveLink %>" target="_blank" class="btn btn-primary btn-sm">
                <i class="fas fa-video"></i> Join Live
              </a>
              <a href="/notes/<%= course._id %>" class="btn btn-outline-success btn-sm">
                <i class="fas fa-download"></i> Notes
              </a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>